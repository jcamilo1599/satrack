{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "removeComments": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ]
}
